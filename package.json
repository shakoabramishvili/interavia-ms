{
  "name": "interavia-ms",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build:backoffice": "nest build backoffice-api",
    "build:payment": "nest build payment-api",
    "build:all": "yarn build:backoffice && yarn build:payment",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:backoffice": "nest start backoffice-api",
    "start:payment": "nest start payment-api",
    "start:all": "yarn start:backoffice & yarn start:payment",
    "start:dev:backoffice": "nest start backoffice-api --watch",
    "start:dev:payment": "nest start payment-api --watch",
    "start:dev": "yarn start:dev:backoffice & yarn start:dev:payment",
    "start:debug:backoffice": "nest start backoffice-api --debug --watch",
    "start:debug:payment": "nest start payment-api --debug --watch",
    "start:debug": "yarn start:debug:backoffice & yarn start:debug:payment",
    "start:prod": "yarn build && yarn start:all",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "dotenv": "^16.4.7",
    "mysql2": "^3.14.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.21"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^n/core(|/.*)$": "<rootDir>/libs/core/src/$1"
    }
  }
}
